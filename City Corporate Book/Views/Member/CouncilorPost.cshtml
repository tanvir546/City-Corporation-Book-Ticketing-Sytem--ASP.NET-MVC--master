@{
    ViewBag.Title = "MemberPost";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    var CommentPerson = Request.Cookies["usId"].Value.ToString();
}
<meta name="viewport" content="width=device-width" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/select2.min.js"></script>
<script src="~/Scripts/select2.js"></script>
<link href="~/Content/css/select2.css" rel="stylesheet" />
<link href="~/Content/css/select2.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4"><center><h1>Councilor Complains</h1></center></div>
    <div class="col-lg-4">@Html.DropDownList("Location", (IEnumerable<SelectListItem>)ViewBag.User, "--- Select Location ---", new { @class = "form-control select2", @id = "Location" })</div>
</div>

<div id="POST">

</div>

<script>
    $(".select2").select2();

    $(document).ready(function () {
        //console.log("ready!");
        //$("#StoreList tbody tr").remove();
        var url = "/Member/WatchCouncilorPost/";
        var loca = "";
        $.get(url, { loca: loca },
            function (result) {
                console.log(result);
                $('#POST').html(result);
            });
    });

    $("#Location").change(function () {
        //alert($('#Location :selected').text());
        var loca = $('#Location :selected').text();
        var url = "/Member/WatchCouncilorPost/";
        $.get(url, { loca: loca },
            function (result) {
                console.log(result);
                $('#POST').html(result);
            });
    });

</script>
