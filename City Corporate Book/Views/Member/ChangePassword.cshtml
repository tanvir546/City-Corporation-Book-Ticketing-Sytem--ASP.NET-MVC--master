@model City_Corporate_Book.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/ChangePassword.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}
@using (Html.BeginForm("ChangePassword", "Member", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1 class="row justify-content-center">Change Password Form</h1>
    <hr />

    <div class="container">
        <div class="form-group mr-6">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 col-form-label" })
            @Html.PasswordFor(m => m.OldPassword, new { @class = "col-4 form-control-sm" })
        </div>
        <div class="form-group mr-6">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 col-form-label" })
            @Html.PasswordFor(m => m.NewPassword, new { @class = "col-4 form-control-sm" })
        </div>
        <div class="form-group mr-6">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 col-form-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-4 form-control-sm" })
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row" id="submitButton">
            <div class="col-md-2">
                <input type="submit" id="submit" value="Change Password" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-default" id="cancel">Clear</button>
            </div>
        </div>
    </div>

}
<script>

    $("#cancel").click(function () {
        event.preventDefault();
    });

</script>


